<h3>Create a new track for <%=@band.name%>'s album, "<%=@album.title%>"</h3>

<form class="" action="<%=tracks_url%>" method="post">
  <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
  
  <input type="hidden" name="track[album_id]" value="<%=@album.id%>">
  
  <label>Title:
    <input type="text" name="track[title]" value="">
  </label>
  
  <label>Track Number:
    <input type="integer" name="track[ord]" value="">
  </label>
  
  <br>
  
  <label>Lyrics:
    <br>
    <textarea name="track[lyrics]" rows="8" cols="80"></textarea>
  </label>
  
  <br>
  
  <label>Is this a Regular or Bonus track?
    <select class="" name="track[track_type]">
      <option disabled selected value="">--Select Type --</option>
      <option value="Regular">Regular</option>
      <option value="Bonus">Bonus</option>
    </select>
  </label>
  
  <br>
  <br>
  
  <input type="submit" name="" value="Add Track">
</form>
